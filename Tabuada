while True:
    numero = int(input('Digite um número (Numeros negativos encerrarão o programa): '))
    if numero >= 0:
        for c in range(1, 11):
            print(f'{numero} x {c} = {numero * c}')
    elif numero < 0:
        break
print(f'''
Numero {numero * -1} negativo detectado... 
ENCERRANDO PROGRAMA
VOLTE QUANDO QUISER!''')
